<!-- Include the header partial file -->
<!-- 
  This line imports shared HTML code (like <head>, <link>, or navigation bar)
  from the file:  views/partials/header.ejs
  It helps you avoid repeating the same header code in every page.
-->
<%- include("partials/header") %>

    <!-- Page container -->
    <div class="table-container">
      <!-- Page title -->
      <h2 class="todo-title">Delete Todo</h2>

      <!-- Back button to return to main Todo list page -->
      <a class="btn btn-back" href="/">Back</a>

      <!-- Confirmation section -->
      <!-- Ask the user if they are sure about deleting the Todo -->
      <div class="confirm">
        <p>
          Are you sure you want to delete this todo?
          <!-- 'Yes' button triggers the delete action -->
          <!-- Sends query parameters: id=<todoId>&confirm=yes -->
          <a class="btn btn-delete" href="/confirm-delete?id=<%= id %>&confirm=yes">Yes</a>
          <!-- 'No' button cancels deletion and redirects back to home -->
          <a class="btn btn-no" href="/confirm-delete?id=<%= id %>&confirm=no">No</a>
        </p>
      </div>
    </div> 

<!-- Include the footer partial file -->
<!-- 
  This imports shared HTML code for the page footer (like closing tags, scripts, etc.)
  from the file:  views/partials/footer.ejs
  It keeps your code organized and reusable across multiple pages.
-->
<%- include("partials/footer") %>
