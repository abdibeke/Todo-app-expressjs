<!-- Include the header partial file -->
<!-- 
  This line imports shared HTML code (like <head>, <link>, or navigation bar)
  from the file:  views/partials/header.ejs
  It helps you avoid repeating the same header code in every page.
-->
<%- include("partials/header") %>

    <!-- Page container -->
    <div class="table-container">
      <!-- Page title -->
      <h2 class="todo-title">Update Todo</h2>

      <div>
        <!-- Back button to return to the main Todo list page -->
        <a class="btn" href="/">Back</a>

        <!-- 
          Update Todo form
          Allows the user to edit and update an existing Todo item.
          The form uses POST method to send updated data to the server.
          The action URL includes the Todo ID to specify which item to update.
          Example: /update-todo/672a1c... (MongoDB _id)
        -->
        <form action="/update-todo/<%= todo._id %>" method="post">
          <div class="update-todo">
            <!-- Title input field -->
            <div class="form-group">
              <label for="title" class="text-light">Title</label>
              <input
                type="text"
                name="title"
                value="<%= todo.title %>" 
                placeholder="Type todo here"
              />

              <!-- Description input field -->
              <div class="form-group">
                <label for="description" class="text-light">Description</label>
                <input
                  type="text"
                  name="desc"
                  value="<%= todo.desc %>"
                  placeholder="Type description here"
                />
              </div>

              <!-- Save button to update the Todo -->
              <div class="form-group">
                <button type="submit" class="btn">Save</button>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>  

<!-- Include the footer partial file -->
<!-- 
  This imports shared HTML code for the page footer (like closing tags, scripts, etc.)
  from the file:  views/partials/footer.ejs
  It keeps your code organized and reusable across multiple pages.
-->
<%- include("partials/footer") %>
